<div class="content">
  <div class="player-list">
    <%= render partial: 'players', locals: { players: @players } %>
  </div>
</div>
<% content_for :javascript do %>
  <script>
    $(document).ready(function() {
      $('.player-list').jscroll({
        callback: function() {
          FastClick.attach(document.body);
          $("img.lazy").lazyload();
        }
      });
    });
  </script>
<% end %>