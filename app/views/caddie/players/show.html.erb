<div class="content">
  <div class="container no-bottom">
    <h3><%= @player.match.venue.name %></h3>
    <strong>时间：</strong><%= @player.created_at.strftime('%Y-%m-%d %H:%M') %><br>
    <strong>用户：</strong><%= @player.user.nickname %><br><br><br>
  </div>
  <div class="decoration"></div>
  <div class="one-third-responsive">
    <% @player.scorecards.each do |scorecard| %>
    <h4><%= scorecard.number %>号洞 | Par <%= scorecard.par %> | <%= human_tee_box_color(scorecard.tee_box_color) %><%= scorecard.distance_from_hole_to_tee_box %>码</h4>
    <a href="<%= url_for(edit_caddie_scorecard_path(scorecard)) %>" class="user-list-item">
      <% if scorecard.finished? %>
      <strong>成绩：</strong><%= scorecard.score %>杆<br>
      <strong>开球：</strong><%= scorecard.direction %>，<%= scorecard.driving_distance %>码<br>
      <% else %>
      未添加成绩<br>
      <% end %>
      <i class="fa fa-chevron-right"></i>
    </a>
    <div class="decoration"></div>
    <% end %>
  </div>
</div>