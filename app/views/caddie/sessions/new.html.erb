<div class="login-page bg3">
  <div class="login-page-overlay"></div>
  <div class="login-page-wrapper">
    <a href="#" class="login-logo"></a>
    <p>请填写手机号和密码后进行登录。</p>
    <%= form_tag cms_signin_path, method: :post do %>
      <input type="text" class="login-username" placeholder="手机">
      <input type="password" class="login-password" placeholder="密码">
      <div class="one-half">
        <a href="#" class="button button-green">登录</a>
      </div>
      <div class="one-half last-column">
        <%= link_to '注册', caddie_signup_path, class: 'button button-blue' %>
      </div>
    <% end %>
    <div class="clear"></div>
    <a class="forgot" href="#">忘记密码?</a>
  </div>
</div>