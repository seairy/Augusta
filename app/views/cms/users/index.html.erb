<div class="pageheader">
  <h2><i class="fa fa-list"></i> 球会管理 <span>列表</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-primary table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_t 'user.portrait' %></th>
              <th><%= brac_t 'user.type' %></th>
              <th><%= brac_t 'user.phone' %></th>
              <th><%= brac_t 'user.nickname' %></th>
              <th><%= brac_t 'user.signed_up_at' %></th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td colspan="3" class="table-paginate"><%= brac_paginate @users %></td>
            </tr>
          </tfoot>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag(user.portrait.w300_h300_fl_q50.url || 'cms/non-portrait.png', class: 'portrait-thumb') %></td>
              <td><%= user_type(user.type) %></td>
              <td><%= user.phone %></td>
              <td><%= user.nickname %></td>
              <td><%= brac_datetime(user.signed_up_at) %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, user] %>
                <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_cms_user_path(user) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>