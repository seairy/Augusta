<div class="pageheader">
  <h2><i class="fa fa-list"></i> 搜索 <span>结果</span></h2>
</div>
<div class="contentpanel">
  <%= brac_flash %>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-primary table-striped mb30">
          <thead>
            <tr>
              <th><%= brac_t 'course.city' %></th>
              <th><%= brac_t 'course.name' %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
            <tr>
              <td><%= course.city.province.name %> - <%= course.city.name %></td>
              <td><%= course.name %></td>
              <td class="table-action">
                <%= link_to raw('<i class="fa fa-file-text-o"></i>'), [:cms, course] %>
                <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_cms_course_path(course) %>
                <%= link_to raw('<i class="fa fa-trash-o"></i>'), [:cms, course], method: :delete, data: { confirm: '确定要删除吗？' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>